# Application metadata
APP_NAME=Unified JIRA-Confluence Backend
APP_VERSION=0.1.0
APP_ENV=development

# Host/port configuration
# Many preview systems provide PORT; run.sh maps PORT->APP_PORT automatically.
APP_HOST=0.0.0.0
APP_PORT=8000
# PORT=8000

# CORS configuration
# Comma-separated list of allowed origins, e.g.:
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# For preview environments you can use "*"
CORS_ORIGINS=*

# Integration placeholders (optional)
JIRA_BASE_URL=
CONFLUENCE_BASE_URL=
